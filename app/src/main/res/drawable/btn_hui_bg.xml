<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <!-- 角度 -->
            <corners android:radius="8dp" />
            <!-- 边框样式 -->
            <stroke
                android:width="1dp"
                android:color="@color/color_bg_hui" />
            <!-- 填充颜色 -->
            <solid android:color="@color/color_bg_hui" />
        </shape>

    </item>

    <item android:state_pressed="false">
        <shape>
            <!-- 角度 -->
            <corners android:radius="8dp" />
            <!-- 边框样式 -->
            <stroke
                android:width="1dp"
                android:color="@color/color_hui_white" />
            <!-- 填充颜色 -->
            <solid android:color="@color/color_hui_white" />
        </shape>

    </item>


</selector>