<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_hui">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/title_error_color"
        android:id="@+id/llErrorCode">

        <TextView android:id="@+id/tvErrorCodeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Error Code:123456789"
            android:textSize="13sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/title_net_color"
        android:id="@+id/llNetInfo"
        android:layout_marginTop="0.5dp">

        <ImageView android:id="@+id/imgNetIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/img_wifi_icon"/>

        <TextView android:id="@+id/tvNetInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WIFI:12345678"
            android:textSize="13sp"
            android:textColor="@color/title_net_text_color"/>

    </LinearLayout>

    <RelativeLayout android:id="@+id/rlMessageInfo"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/title_msg_color"
        android:layout_marginTop="0.5dp">
        <TextView android:id="@+id/tvMessageInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message:123456789"
            android:textColor="@color/title_msg_text_color"
            android:layout_centerInParent="true"
            android:textSize="13sp"/>

        <ImageView android:id="@+id/imgDelete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:src="@drawable/img_delete"/>


    </RelativeLayout>





</LinearLayout>