<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/color_bg_hui">


    <com.smart.bms_byd.view.NetStateInfoView
        android:id="@+id/myNetState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout android:id="@+id/rlIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_hui"
        android:padding="10dp"
        android:layout_below="@+id/myNetState">

        <ImageView android:id="@+id/imgLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_left_back"
            android:visibility="visible"/>

        <ImageView android:id="@+id/imgTitleIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_beconnect_icon"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Battery-Box"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imgTitleIcon"
            android:layout_marginTop="5dp"/>

        <ImageView android:id="@+id/imgRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/img_right_more"
            android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout android:id="@+id/llTitleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_hui">
        <TextView android:id="@+id/tvTitleName"
            style="@style/title_name_style"
            android:text="CONFIGURATION"
            android:layout_marginTop="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:background="@color/white"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

        <LinearLayout android:id="@+id/llConfigPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView android:id="@+id/imgFow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_fow_one"
                android:layout_marginTop="20dp"/>

            <com.smart.bms_byd.view.CustomViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/viewPager"
                android:layout_margin="20dp"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/llSureConfigData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:visibility="gone"
            android:background="@drawable/view_finddevice_border_hui">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time:"
                    android:layout_centerVertical="true"/>

                <TextView android:id="@+id/tvSureTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dec-09,2020 15:49:47"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_hui"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inverter:"
                    android:layout_centerVertical="true"/>

                <TextView android:id="@+id/tvSureInverter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dec-09,2020 15:49:47"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_hui"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Model:"
                    android:layout_centerVertical="true"/>

                <TextView android:id="@+id/tvSureSystem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dec-09,2020 15:49:47"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_hui"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of Modules per Tower:"
                    android:layout_centerVertical="true"/>

                <TextView android:id="@+id/tvSureNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dec-09,2020 15:49:47"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_hui"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Network"
                    android:layout_centerVertical="true"/>

                <TextView android:id="@+id/tvSureNetwork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dec-09,2020 15:49:47"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_hui"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phase:"
                    android:layout_centerVertical="true"/>

                <TextView android:id="@+id/tvSurePhase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dec-09,2020 15:49:47"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>




        </LinearLayout>

        <LinearLayout android:id="@+id/llSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:paddingBottom="50dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_set_ok"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The device configuration is \nsuccessful!"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"/>



        </LinearLayout>

    </RelativeLayout>

    <Button android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Next"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_red_bg"
        android:textAllCaps="false"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"/>





</LinearLayout>